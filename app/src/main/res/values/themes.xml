<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JackSneak" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:spinnerItemStyle">@style/DefaultTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/DefaultTextStyle</item>
    </style>

    <!-- creer le composant pour le titre par defaut -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <!-- Creer le composant pour le titre par défaut -->
    <style name="SubtitleTextstyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Creer le composant pour le titre par défaut -->
    <style name="TitleTextstyle" parent="SubtitleTextstyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="bottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/kanit</item>

    </style>
    <!-- personnaliser la bar de navigation-->
    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

</resources>